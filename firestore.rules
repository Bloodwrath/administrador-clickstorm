rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Función para verificar si el usuario está autenticado
    function isAuthenticated() {
      return request.auth != null;
    }

    // Función para verificar si el usuario es administrador
    function isAdmin() {
      return isAuthenticated() && 
             request.auth.token.admin == true;
    }

    // Reglas para la colección de productos
    match /productos/{productoId} {
      // Cualquier usuario autenticado puede leer los productos
      allow read: if isAuthenticated();
      
      // Solo administradores pueden crear, actualizar o eliminar productos
      allow create: if isAdmin();
      allow update: if isAdmin();
      allow delete: if isAdmin();
    }

    // Reglas para la colección de categorías
    match /categorias/{categoriaId} {
      // Cualquier usuario autenticado puede leer las categorías
      allow read: if isAuthenticated();
      
      // Solo administradores pueden crear, actualizar o eliminar categorías
      allow create: if isAdmin();
      allow update: if isAdmin();
      allow delete: if isAdmin();
    }

    // Reglas para la colección de proveedores
    match /proveedores/{proveedorId} {
      // Cualquier usuario autenticado puede leer los proveedores
      allow read: if isAuthenticated();
      
      // Solo administradores pueden crear, actualizar o eliminar proveedores
      allow create: if isAdmin();
      allow update: if isAdmin();
      allow delete: if isAdmin();
    }

    // Reglas para la colección de movimientos de inventario
    match /movimientos/{movimientoId} {
      // Cualquier usuario autenticado puede leer los movimientos
      allow read: if isAuthenticated();
      
      // Solo administradores pueden crear movimientos
      allow create: if isAdmin();
    }

    // Reglas para la colección de alertas
    match /alertas/{alertaId} {
      // Cualquier usuario autenticado puede leer las alertas
      allow read: if isAuthenticated();
      
      // Solo administradores pueden crear alertas
      // Los usuarios pueden marcar alertas como leídas
      allow create: if isAdmin();
      allow update: if isAdmin() || 
                   (isAuthenticated() && 
                    request.resource.data.leido == true);
    }

    // Reglas para la colección de usuarios
    match /usuarios/{userId} {
      // Los usuarios solo pueden leer/actualizar su propia información
      allow read, update: if isAuthenticated() && 
                         request.auth.uid == userId;
      
      // Solo administradores pueden crear o eliminar usuarios
      allow create, delete: if isAdmin();
    }
  }
}
